{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": [
      "ES2020"
    ],
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "noImplicitAny": false
  },
  "include": [
    "test/**/*",
    "**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out",
    "test/unit"
  ]
} 