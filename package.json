{
  "name": "ks-vscode",
  "displayName": "Keeper Security",
  "description": "Keeper Security integration for VS Code",
  "version": "1.0.0",
  "license": "MIT",
  "publisher": "keeper-security",
  "repository": {
    "type": "git",
    "url": "https://github.com/keeper-security/ks-vscode.git"
  },
  "keywords": [
    "keeper",
    "security",
    "password",
    "vscode"
  ],
  "engines": {
    "vscode": "^1.99.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Security"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ks-vscode.helloWorld",
        "title": "Hello World",
        "category": "Keeper Security"
      }
    ],
    "configuration": [
      {
        "type": "object",
        "title": "Keeper Security",
        "id": "keeper-security",
        "properties": {
          "Keeper Security.ks-vscode.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable Keeper Security features"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p tsconfig.test.json --outDir out",
    "watch-tests": "tsc -p tsconfig.test.json -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vscode-test",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:integration": "vscode-test",
    "test:all": "npm run test:unit && npm run test:integration",
    "clean": "rm -rf dist out coverage",
    "prepare": "husky install",
    "pre-commit": "npm run lint && npm run test:unit",
    "pre-push": "npm run test:all",
    "package:vsix": "vsce package",
    "publish:patch": "vsce publish patch",
    "publish:minor": "vsce publish minor",
    "publish:major": "vsce publish major"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "vsce": "^2.15.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
